<%- include('./components/header') %>
<div class="row">
  <div class="col l6 s6 m6 offset-s3 offset-l3 offset-m3">
    <% messages.forEach(message => { %>
      <div class="card gray">
        <div class="card-content gray-text">
          <span class="card-title flow-text"><%= message.content %></span>
          <% if (!!message.user) { %>
            <span class="app-message-info">
              发布者:&nbsp;<a href="/message/<%= message.author %>"><%= message.author %></a>
            </span>
          <% } else { %>
            <span class="app-message-info">发布者:&nbsp;<a href="#">未知</a></span>
          <% } %>
          <span class="app-message-info">
            发布日期:&nbsp;<%= message.create_at.toString().substr(0, 11) %>
          </span>
          <span class="app-message-info">
            最后更新:&nbsp;<%= message.update_at.toString().substr(0, 11) %>
          </span>
        </div>
        <div class="card-action app-message-acitons">
           <a class="cyan-text" href="/message/edit/<%= message._id %>" title="编辑"><i class="material-icons">edit</i></a>
           <a class="cyan-text" href="/message/remove/<%= message._id %>" title="删除" />
           <i class="material-icons">delete</i></a>
         </div>
      </div>
    <% }) %>
  </div>
</div>
<script>

</script>
<%- include('./components/footer') %>
